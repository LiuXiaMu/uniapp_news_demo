.news-box .list .uni-list-item {
  height: 180rpx;
}
.news-box .list .uni-list-item .uni-list-item__container {
  padding: 20rpx 30rpx;
  height: 100%;
}
.news-box .list .uni-list-item .uni-list-item__container .list-item-body {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: space-between;
  width: 100px;
}
.news-box .list .uni-list-item .uni-list-item__container .list-item-body .title {
  overflow: hidden;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
}
.news-box .list .uni-list-item .uni-list-item__container .list-item-body .footer {
  color: #5a5a5a;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.news-box .list .uni-list-item .uni-list-item__container .list-item-body .footer :first-child {
  margin-right: 20rpx;
}
.news-box .list .uni-list-item .uni-list-item__container .uni-list-item__header {
  flex: 0.35;
}
.news-box .list .uni-list-item .uni-list-item__container .uni-list-item__header .uni-list-item__icon {
  height: 100%;
  width: 100%;
}
.news-box .list .uni-list-item .uni-list-item__container .uni-list-item__header .uni-list-item__icon .uni-list-item__icon-img {
  height: 100%;
  width: 100%;
}

